{

	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.jsl",
	"name": "JUDO Specification Language",

	"patterns": [
		{
			"include": "#comments"
		},

		{ "name": "keyword.control.jsl.commands", "match": "\\b(var|construct|destruct|save|load|if|else|for|in|while|validate|unset|delete|return|break|continue|new|implies|or|xor|and|div|mod|not|throw|try|catch|self)\\b"},
		{ "name": "storage.type.jsl.types", "match": "\\b(actor|username|principal|boolean|binary|string|numeric|date|time|timestamp|mapped|as|abstract|extends|model|import|annotate|diagram|transfer|type|union|error|enum|entity)\\b"},
		{ "name": "keyword.control.jsl.features", "match": "\\b(authorize|stage|table|column|layout|constraint|field|identifier|derived|relation|action|static|throws|group|package|widget)\\b"},
		{ "name": "keyword.control.jsl.parameters", "match": "\\b(void|override|onerror|class|horizontal|vertical|hide\\-attributes|hide\\-actions|hide-relations|expression|opposite|opposite\\-add|read\\-only|min\\-size|max\\-size|mime\\-types|max\\-file\\-size|regex|precision|required|cascade|scale|frame|label|icon|stretch\\-horizontal|stretch\\-vertical|stretch\\-both|width|height)\\b"},
		{ "name": "string.quoted.double.states", "begin": "\"", "end": "\""},
		{ "name": "keyword.operator.comparison.jsl", "match": "<\\=|>\\=|\\=\\=|<|>|<>"},
		{ "name": "keyword.operator.assignment.jsl", "match": "\\=|\\+\\=|-\\=|\\*\\=|/\\=|//\\=|%\\=|&\\=|\\|\\=|\\^\\=|>>\\=|<<\\=|\\*\\*\\="},
		{ "name": "keyword.operator.arithmetic.jsl", "match": "\\+|\\-|\\*|\\*\\*|/|//|%|<<|>>|&|\\||\\^|~"},
		{ "name": "constant.numeric.octal.jsl", "match": "\b(?i:(0[0-7]+)L?)"},
		{ "name": "constant.numeric.float.jsl", "match": "\b(?i:(\\d+\\.\\d*(e[\\-\\+]?\\d+)?))(?=[^a-zA-Z_])"},
		{ "name": "constant.numeric.float.jsl", "match": "(?<=[^0-9a-zA-Z_])(?i:(\\.\\d+(e[\\-\\+]?\\d+)?))" },
		{ "name": "constant.numeric.float.jsl", "match": "\b(?i:(\\d+e[\\-\\+]?\\d+))"},
		{ "name": "constant.numeric.integer.long.decimal.jsl", "match": "\\b(?i:([1-9]+[0-9]*|0)L)"},
		{ "name": "constant.numeric.integer.decimal.jsl", "match": "\\b([1-9]+[0-9]*|0)"}
		
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.block.empty.jsl",
					"match": "/\\*\\*/",
					"comment": "punctuation.definition.comment define the scope in editor.textColorCustomization",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.jsl"
						}
					}
				},
				{
					"include": "#comments-inline"
				}
			]
		},
		"comments-inline": {
			"patterns": [
				{
					"include": "#comments-block"
				},
				{
					"match": "((//).*)$",
					"captures": {
						"1": {
							"name": "comment.line.double-slash.jsl"
						}
					}
				}
			]
		},
		"comments-block": {
			"patterns": [
				{
					"name": "comment.block.jsl",
					"begin": "/\\*",
					"end": "\\*/",
					"patterns": [
						{
							"include": "#comments-block"
						}
					]
				}
			]
		}

	}
}

    